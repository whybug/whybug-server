    "dotenv": "^1.2.0",
    "elasticsearch": "^4.0.2",
    "elasticsearch-hapi-logger": "0.0.1",
    "good": "^6.1.2",
    "good-console": "^5.0.0",
    "good-reporter": "^3.0.1",
    "handlebars": "^2.0.0",
    "hapi": "^8.4.0",
    "hapi-auth-cookie": "^2.2.0",
    "hapi-cache-buster": "^0.4.0",
    "hapi-relax": "^1.0.1",
    "joi": "^4.8.0",
    "knex": "^0.6.22",
    "marked": "^0.3.2",
    "mysql": "^2.5.0",
    "node-uuid": "^1.4.1",
    "pm2": "^0.12.14",
    "pmx": "^0.3.11",
    "promise": "^6.1.0",
