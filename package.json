{
  "name": "whybug-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch src server.js & npm run asset-server",
    "prod": "node_modules/.bin/pm2 start server.js --name whybug -i 0",
    "stop": "node_modules/.bin/pm2 stop whybug'",
    "build": "node_modules/.bin/webpack --config config/webpack.config.js -p 2<&1",
    "asset-server": "./node_modules/.bin/webpack-dev-server --config config/webpack.config.dev.js --host 0.0.0.0 --hot --port 8001",
    "knex": "node_modules/.bin/knex --env production --cwd ./ --knexfile config/knexfile.js",
    "test": "node_modules/.bin/mocha tests --require tests/es6_mocha.js --recursive"
  },
  "dependencies": {
    "bell": "^2.7.1",
    "bookshelf": "^0.7.9",
